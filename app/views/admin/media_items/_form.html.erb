<%= form_with(model: [:admin, media_item], id: "media-items-form", class: "media-items__form") do |form| %>

  <%= hidden_field_tag :hide_delete, params[:hide_delete] if params[:hide_delete].present? %>
  <%= hidden_field_tag :target, params[:target] if params[:target].present? %>

  <%= form.file_field :media %>
  <%= form.submit %>
<% end %>
